<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="bookData"
            type="com.caraquri.bookmanager_android.model.BookDataModel"/>
    </data>
    <RelativeLayout
        android:id="@+id/book_list_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/book_image"
            android:contentDescription="@string/book_image_picture"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:background="#FF0000"/>
        <TextView
            android:id="@+id/book_title_text_view"
            android:text="@{bookData.bookName}"
            android:layout_alignTop="@+id/book_image"
            android:layout_toEndOf="@+id/book_image"
            android:layout_toRightOf="@+id/book_image"
            android:drawablePadding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
        <TextView
            android:id="@+id/book_price_text"
            android:text="@{bookData.bookPrice}"
            android:layout_alignBottom="@+id/book_image"
            android:layout_toEndOf="@id/book_image"
            android:layout_toRightOf="@id/book_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/purchase_date"
            android:text="@{bookData.purchaseDate}"
            android:layout_alignBottom="@+id/book_image"
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</layout>